<% include ('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To FASH!</h1>
            <p>View our hand-picked global best clothes </p>
            <p>
                <a class="btn btn-primary btn-large" href="/clothes/new">Add New Item</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% clothes.forEach(function(item){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= item.image %>" height="200">
                    <div class="caption">
                        <h4><%= item.name %></h4>
                    </div>
                    <p>
                        <a href="/clothes/<%= item._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ('../partials/footer') %>